@page "/login"
@inject SpravaProjektov.Application.Auth.IAuthRepository Auth
@inject NavigationManager Navigation
@inject ILogger<Login> Logger
@using Microsoft.AspNetCore.Http

<PageTitle>Login</PageTitle>

<h1>Prihlásenie</h1>

<AuthorizeView Context="auth">
  <Authorized>
    <div class="alert alert-info" role="alert">
      Už ste prihlásený. Pokračujte na <a href="/projects">zoznam projektov</a>.
    </div>
  </Authorized>
  <NotAuthorized>
    <div class="alert alert-secondary" role="alert">
      Demo prihlasovacie údaje:<br />
      Admin: <code>admin</code> / <code>admin123</code><br />
      Používateľ: <code>user</code> / <code>user123</code>
    </div>

    <EditForm Model="Model" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit"
      FormName="LoginForm">
      <DataAnnotationsValidator />
      <ValidationSummary />

      <div class="mb-3">
        <label class="form-label">Používateľské meno</label>
        <InputText class="form-control" @bind-Value="Model!.Username" />
        <ValidationMessage For="() => Model!.Username" />
      </div>
      <div class="mb-3">
        <label class="form-label">Heslo</label>
        <InputText class="form-control" type="password" @bind-Value="Model!.Password" />
        <ValidationMessage For="() => Model!.Password" />
      </div>
      <div class="form-check mb-3">
        <InputCheckbox class="form-check-input" @bind-Value="Model!.RememberMe" />
        <label class="form-check-label">Zapamätať prihlásenie</label>
      </div>

      @if (!string.IsNullOrEmpty(Error))
      {
        <div class="alert alert-danger" role="alert">@Error</div>
      }

      <button type="submit" class="btn btn-primary">Prihlásiť</button>
    </EditForm>
  </NotAuthorized>
</AuthorizeView>

@code {
  [SupplyParameterFromForm]
  private LoginModel? Model { get; set; }

  [SupplyParameterFromQuery]
  private string? ReturnUrl { get; set; }

  [CascadingParameter]
  private HttpContext? HttpContext { get; set; }

  private string? Error { get; set; }

  protected override void OnInitialized()
  {
    Logger.LogDebug("Login page initialized");
    Model ??= new();
  }

  private async Task HandleValidSubmit(EditContext _)
  {
    Error = null;
    var user = Model!.Username ?? string.Empty;
    var remember = Model!.RememberMe;
    Logger.LogDebug("Submitting login form for {User}, rememberMe={Remember}", user, remember);

    bool ok;
    try
    {
      ok = await Auth.SignInAsync(user, Model!.Password ?? string.Empty, remember);
    }
    catch (Exception ex)
    {
      Error = "Chyba pri prihlasovaní.";
      Logger.LogError(ex, "Exception during sign-in for {User}", user);
      return;
    }

    if (ok)
    {
      Logger.LogInformation("Login success for {User}", user);
      var target = string.IsNullOrWhiteSpace(ReturnUrl) ? "/projects" : ReturnUrl;
      if (HttpContext is not null)
      {
        // Static SSR: server-side redirect (no NavigationException in .NET 9)
        HttpContext.Response.Redirect(target);
        return;
      }
      // Interactive: client-side navigation (may throw NavigationException during SSR, let it bubble)
      Navigation.NavigateTo(target, forceLoad: true);
      return;
    }
    else
    {
      Error = "Neplatné prihlasovacie údaje.";
      Logger.LogWarning("Login failed for user {User}", user);
    }
  }

  private void HandleInvalidSubmit(EditContext editContext)
  {
    // Aggregate first error to show a friendly message; details are in the summary.
    Error = "Vyplňte používateľské meno a heslo.";
    Logger.LogWarning("Login form invalid: {Messages}", string.Join("; ", editContext.GetValidationMessages()));
  }

  public class LoginModel
  {
    [Required(ErrorMessage = "Meno je povinné.")]
    public string? Username { get; set; }
    [Required(ErrorMessage = "Heslo je povinné.")]
    public string? Password { get; set; }
    public bool RememberMe { get; set; }
  }
}